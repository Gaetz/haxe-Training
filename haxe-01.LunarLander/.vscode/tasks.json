{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "dependsOn": [
                "Build Hxml", "Assets"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Hxml",
            "command": "haxe",
            "args": [
                "build.hxml"
            ],
            "problemMatcher": [
                "$haxe-absolute",
                "$haxe",
                "$haxe-error",
                "$haxe-trace"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Assets",
            "type": "shell",
            "command": "./scripts/assets",
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run JS",
            "type": "shell",
            "command": "C:\\Program Files (x86)\\Mozilla Firefox\\firefox",
            "args": ["-url","${workspaceRoot}\\build\\index.html"],
        }
    ]
}